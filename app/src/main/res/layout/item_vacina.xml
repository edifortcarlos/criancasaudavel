<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:clickable="true"
android:focusable="true"
android:foreground="?attr/selectableItemBackground"
android:layout_alignParentTop="true"
android:layout_marginBottom="@dimen/card_margin_bottom"
android:layout_marginEnd="@dimen/card_margin_right"
android:layout_marginLeft="@dimen/card_marign_left"
android:layout_marginRight="@dimen/card_margin_right"
android:layout_marginStart="@dimen/card_marign_left"
android:layout_marginTop="@dimen/card_magin_top"
card_view:cardCornerRadius="@dimen/card_corner_radius"
card_view:cardElevation="@dimen/card_elevation"
card_view:cardPreventCornerOverlap="false"
card_view:cardUseCompatPadding="false">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:dividerHorizontal"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/azulAccent"
        android:showDividers="middle">

        <TextView
            android:id="@+id/txtNome"
            android:drawableRight="@drawable/vaccine"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:drawablePadding="-30dp"
            android:textSize="20sp"
            android:textColor="@color/branco"
            android:layout_height="wrap_content"
            android:padding="@dimen/size16dp"
            android:text="Nome"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_post_height"
        android:clickable="false"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/btnDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Dose"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:background="#ddd" />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="@dimen/size4dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:background="#ddd" />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="@dimen/size4dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:background="#ddd" />
        <Button
            android:id="@+id/btnTempoRecomendado"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tempo Recomendado"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>