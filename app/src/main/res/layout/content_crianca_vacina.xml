<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.CriancaVacinaActivity"
    tools:showIn="@layout/activity_crianca_vacina">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/cardView2"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                tools:ignore="UselessLeaf,UselessParent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:background="@color/primeiro"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:gravity="center"
                                    android:textSize="24sp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/size16dp"
                                    android:textStyle="bold"
                                    android:id="@+id/txtNome"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nome"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#731fe1"
                                android:orientation="vertical"
                                android:paddingBottom="4dp"
                                android:paddingEnd="@dimen/size16dp"
                                android:paddingStart="@dimen/size16dp"
                                android:paddingTop="@dimen/size16dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/size4dp"
                                        android:orientation="vertical"
                                        android:padding="4dp">

                                        <LinearLayout
                                            android:layout_width="200dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/mm"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:gravity="center"
                                                android:padding="8dp"
                                                android:ems="20"
                                                android:maxLines="1"
                                                android:textSize="16sp"
                                                android:text="Data de nascimento "
                                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/branco"
                                                android:typeface="serif"
                                                tools:ignore="HardcodedText,RtlHardcoded" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/size4dp"
                                        android:orientation="vertical"
                                        android:padding="4dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/txtDataDeNascimento"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:ems="20"
                                                android:padding="8dp"
                                                android:textSize="16sp"
                                                android:maxLines="1"
                                                android:textStyle="bold"
                                                android:text="Valor: "
                                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/branco"
                                                android:typeface="serif"
                                                tools:ignore="HardcodedText,RtlHardcoded" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/size4dp"
                                        android:orientation="vertical"
                                        android:padding="4dp">

                                        <LinearLayout
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/m"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:ems="20"
                                                android:maxLines="1"
                                                android:padding="8dp"
                                                android:gravity="center"
                                                android:textSize="16sp"
                                                android:text="Peso"
                                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/branco"
                                                android:typeface="serif"
                                                tools:ignore="HardcodedText,RtlHardcoded" />



                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/size4dp"
                                        android:orientation="vertical"
                                        android:padding="4dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/txtPeso"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="end"
                                                android:ems="20"
                                                android:gravity="center"
                                                android:maxLines="1"
                                                android:textStyle="bold"
                                                android:background="@drawable/fundotextos"
                                                android:padding="8dp"
                                                android:textSize="16sp"
                                                android:text="Peso: "
                                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/branco"
                                                android:typeface="serif"
                                                tools:ignore="HardcodedText,RtlHardcoded" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_post_height"
                            android:clickable="false"
                            android:divider="?android:dividerVertical"
                            android:orientation="horizontal"
                            android:showDividers="middle">

                            <Button
                                android:id="@+id/btnVerDados"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="Ver dados do cartão"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


                            <Button
                                android:id="@+id/btnEditarDados"
                                android:layout_width="0dp"
                                android:background="@android:color/transparent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Editar dados do cartão"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                        </LinearLayout>

                    </LinearLayout>


            </FrameLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCriancaVacina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:listitem="@layout/item_crianca_vacina" />
</android.support.constraint.ConstraintLayout>